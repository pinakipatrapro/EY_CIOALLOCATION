<mvc:View controllerName="pinaki.ey.CIO.allocation.CIOAllocation.controller.CreateAllocationDetail" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m">
	<Page title="{description}" floatingFooter="true">
		<content>
			<ObjectHeader
				title="{child/0/name}"
				showTitleSelector="true"
				number="23100"
				numberUnit="EUR" >
				<statuses>
					<ProgressIndicator
						percentValue="46"
						state="Error" />
				</statuses>
				<attributes>
					<ObjectAttribute title="Total Amount to allocate" text="5000" />
					<ObjectAttribute title="Total Amount  allocated" text="2300" />
					<ObjectAttribute title="Allocated Percentage" text="46%" />
				</attributes>
			</ObjectHeader>
			<l:Splitter height="700px" class="sapUiSizeCompact" binding="{child/0/}">
				 <Panel>
				 	<headerToolbar>
						<Toolbar>
							<Text text="{child/0/level}" />
							<ToolbarSpacer/>
							<ProgressIndicator width="4rem" percentValue="74"/>
							<Text text="{childSum} / {value}"/>
						</Toolbar>
					</headerToolbar>
					<List mode="SingleSelectMaster" items="{path:'child/'}">
						<DisplayListItem
							label="{name}"
							value="{value}"
							type="Navigation"
						/>
						
					</List>
				 </Panel>
				 <Panel binding="{child/0/}" >
				 	<headerToolbar>
						<Toolbar>
							<Text text="{child/0/level}" />
							<ToolbarSpacer/>
							<Text text="{childSum} / {value}"/>
						</Toolbar>
					</headerToolbar>
					<List mode="SingleSelectMaster" items="{path:'child/'}">
						<InputListItem label="{name}" type="Navigation">
							<Input
								width="4rem"
								value="{value}"
								type="Number" />
						</InputListItem>
					</List>
				 </Panel>
				  <Panel binding="{child/0/child/0/}" >
				 	<headerToolbar>
						<Toolbar>
							<Text text="{child/0/level}" />
							<ToolbarSpacer/>
							<Text text="{childSum} / {value}"/>
						</Toolbar>
					</headerToolbar>
					<List mode="SingleSelectMaster" items="{path:'child/'}">
						<InputListItem label="{name}" type="Navigation">
							<Input
								width="4rem"
								value="{value}"
								type="Number" />
						</InputListItem>
					</List>
				 </Panel>
				  <Panel binding="{child/0/child/0/child/0/}" >
				 	<headerToolbar>
						<Toolbar>
							<Text text="{child/0/level}" />
							<ToolbarSpacer/>
							<Text text="{childSum} / {value}"/>
						</Toolbar>
					</headerToolbar>
					<List mode="SingleSelectMaster" items="{path:'child/'}">
						<InputListItem label="{name}">
							<Input
								width="4rem"
								value="{value}"
								type="Number" />
						</InputListItem>
					</List>
				 </Panel>
			</l:Splitter>
		</content>
		<footer>
			<Toolbar/>
		</footer>
	</Page>
</mvc:View>