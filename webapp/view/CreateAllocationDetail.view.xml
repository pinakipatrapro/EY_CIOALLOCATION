<mvc:View controllerName="pinaki.ey.CIO.allocation.CIOAllocation.controller.CreateAllocationDetail" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m">
	<Page title="{i18n>createAllocation}" floatingFooter="true">
		<content>
			<ObjectHeader
				binding="{/ProductCollection/0}"
				title="Cost Pool to IT Service"
				number="23100"
				numberUnit="EUR" >
				<statuses>
					<ProgressIndicator
						percentValue="46"
						state="Error" />
				</statuses>
				<attributes>
					<ObjectAttribute title="Total Amount to allocate" text="5000" />
					<ObjectAttribute title="Total Amount  allocated" text="2300" />
					<ObjectAttribute title="Allocated Percentage" text="46%" />
				</attributes>
			</ObjectHeader>
			<l:Splitter height="700px" class="sapUiSizeCompact ">
				 <Panel>
				 	<headerToolbar>
						<Toolbar>
							<Text text="Cost Center" />
							<ToolbarSpacer/>
							<Text text="3210 EUR"/>
						</Toolbar>
					</headerToolbar>
					<List mode="SingleSelectMaster">
						<DisplayListItem
							label="Internal Labour"
							value="2134 Eur"
							type="Navigation"
						/>
						<DisplayListItem
							label="External Labour"
							value="7034 Eur"
							type="Navigation"
						/>
					</List>
				 </Panel>
				 <Panel>
				 	<headerToolbar>
						<Toolbar>
							<Text text="IT Service Tower" />
							<ToolbarSpacer/>
							<Text text="44%" status="Error"/>
						</Toolbar>
					</headerToolbar>
					<List mode="SingleSelectMaster">
						<InputListItem label="Server">
							<Input
								width="4rem"
								placeholder="Price"
								value="799"
								type="Number" />
						</InputListItem>
					</List>
				 </Panel>
				 <VBox />
				 <VBox />
			</l:Splitter>
		</content>
		<footer>
			<Toolbar/>
		</footer>
	</Page>
</mvc:View>