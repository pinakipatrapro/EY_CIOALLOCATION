<mvc:View controllerName="pinaki.ey.CIO.allocation.CIOAllocation.controller.CreateAllocation" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" displayBlock="true" xmlns="sap.m">
	<Page title="{i18n>createAllocation}" floatingFooter="true">
		<content>
			<VBox>
				<HBox justifyContent="Center" class="sapUiSmallMarginTop">
					<Text text="Select allocation type : " class="sapUiTinyMargin"/>
					<Select change="onAllocationTypeChange" selectedKey="{/type}" enabled="{/typeEnabled}">
						<core:Item text="Actual" key="A"/>
						<core:Item text="Budget" key="B"/>
					</Select>
				</HBox>
				<HBox justifyContent="Center" class="sapUiSmallMarginTop" visible="{= ${/type} === 'A'?true:false}">
					<Label text="Select Month: " class="sapUiTinyMargin" required="true"/>
					<DatePicker valueFormat="yyyy-MM" displayFormat="yyyy-MM" value="{/allocationYearMonth}" enabled="{/allocationYearMonthEnabled}"/>
				</HBox>
				<HBox justifyContent="Center" class="sapUiSmallMarginTop" visible="{= ${/type} === 'B'?true:false}">
					<Label text="Select Year: " class="sapUiTinyMargin" required="true"/>
					<DatePicker valueFormat="yyyy" displayFormat="yyyy" value="{/budgetYearMonth}" enabled="{/budgetYearMonthEnabled}"/>
				</HBox>
			</VBox>
			<l:Grid content="{path:'/addAllocationMapingData/map'}" class="sapUiSmallMarginTop" hSpacing="2" defaultSpan="L3 M6 S10">
				<VBox alignItems="Center" class="sapUiTinyMargin vboxBorder">
					<Label text="{name}" design="Bold" class="sapUiTinyMargin"/>
					<Text text="Create allocation from {name}" maxLines="3" class="sapUiTinyMargin"/>
					<Button press="navToCostAllocDetails" text="Continue" icon="sap-icon://open-command-field" type="Transparent" class="sapUiTinyMargin"/>
				</VBox>
			</l:Grid>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<!--<Button text="Reset"/>-->
				<!--<Button text="Continue"/>-->
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>